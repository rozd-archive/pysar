					<mx:Button id="showSettingsBut0" width="22" height="22" cornerRadius="0" icon="@Embed(source='../../assets/folder_explore.png')" toolTip="Search"/>
				</mx:HBox>
			</components:NamedGroup>
			<components:NamedGroup height="110" groupLabel="Files" left="10" top="118" right="10">
				<mx:HSlider x="87" y="66" minimum="0" maximum="180" snapInterval="5" allowTrackClick="true" width="100"/>
