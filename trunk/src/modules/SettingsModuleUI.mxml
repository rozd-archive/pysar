							<mx:ColorPicker/>
							<mx:Button width="22" height="22" icon="@Embed(source='../../assets/text_bold.png')"/>
							<mx:Button width="22" height="22" icon="@Embed(source='../../assets/text_italic.png')"/>
						</mx:HBox>
						<mx:HBox width="100%" verticalAlign="middle" horizontalGap="2">
							<mx:Image source="@Embed(source='../../assets/debug.png')"/>
							<mx:Label text="Label" width="100%" minWidth="60" maxWidth="250"/>
							<mx:ColorPicker/>
							<mx:Button width="22" height="22" icon="@Embed(source='../../assets/text_bold.png')"/>
